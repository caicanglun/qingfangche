.scope_box {
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  right: 0;
  width: 86%;
  margin: 0 auto;
  z-index: 9999;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-top:30rpx;
  -webkit-transform:translateY(-50%);
      -ms-transform:translateY(-50%);
          transform:translateY(-50%);
}
.scope_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
